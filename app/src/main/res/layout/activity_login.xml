<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
                android:id="@+id/innerlinear"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="#ffae42"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/border_style"
                    android:text="WE WILL SEND YOUR ONE TIME PASSWORD TO VERIFY YOUR PHONE NUMBER. CARRIER SMS CHARGES WILL BE APPLIED."
                     />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/border_style"
                    android:text="VERIFY YOUR PHONE NUMBER"
                     />

            </LinearLayout>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_below="@id/innerlinear"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-25dp"
                android:src="@drawable/gjhg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical">

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="@drawable/input_border"
                android:entries="@array/Countries"
                android:textAlignment="center" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="@drawable/input_border"
                android:hint="Enter Phone Number"
                android:inputType="number"
                android:textAlignment="center" />

            <Button
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="#ed872d"
                android:text="SUBMIT"
                android:textColor="#e6e6e6" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>